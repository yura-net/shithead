            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data android:name="SwingME.Main.Class" android:value="net.yura.shithead.client.ShitHeadApplication"/>
